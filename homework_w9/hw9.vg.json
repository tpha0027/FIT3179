{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "background": "black",
    "title": {
        "text": "Top Countries with number of Moveis and TV Shoes on NETFLIX",
        "fontSize": 20,
        "color": "white"},
        "projection": {"type": "equalEarth"},
    "layer": [
    {
    "data": {
    "url":
    "https://raw.githubusercontent.com/tpha0027/tpha0027.github.io/main/js/ne_110m.json",
    "format": {"type": "topojson", "feature":
    "ne_110m_admin_0_countries"}
    },
    "mark": {"type": "geoshape", "fill": "lightpink", "stroke":
    "white"}
    },
    {
        "data": {
        "url":
        "https://raw.githubusercontent.com/tpha0027/tpha0027.github.io/main/data/netflix.csv"
        },
        "mark": {"type": "circle", 
                "color": "red",
                "tooltip": {"content": "data"}
    },
        "encoding": {
            "longitude": {"field": "longitude", "type":
                "quantitative"},
            "latitude": {"field": "latitude", "type":
                "quantitative"},
            "size": {
                "field": "type",
                "aggregate": "count",
                "scale":{
                    "domain": [100,400,1000,2500]
                },
            "legend":{
                "labelColor": "white",
                "labelFontSize": 12,
                "titleColor": "white"},
                "title": "No. of Movies and TV Shows"
            },
            "tooltip": [
                {"field": "country", "type": "nominal", "title": "Country"},
                {"field": "type", "aggregate": "count", "title": "Movies and Shows"}
          ]
        }
    }
  ]
}